[database]
name=acoustid
user=acoustid
password=XXX
host=localhost
port=5432

[database_slow]
name=acoustid
user=acoustid
password=XXX
host=localhost
port=5432

[cluster]
role=master
base_master_url=https://api.acoustid.org/
secret=XXX

[index]
host=127.0.0.1
port=6080

[redis]
host=127.0.0.1
port=6379

[logging]
level=WARNING
#level.sqlalchemy=INFO
#syslog=no
#syslog_facility=local1

[website]
base_url=http://acoustid.org/
